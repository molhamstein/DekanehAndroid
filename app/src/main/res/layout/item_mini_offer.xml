<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="80dp"
    android:background="@drawable/square_shape_shadow_item">

    <TextView
        android:id="@+id/percent"
        style="@style/WhiteBlackTextItemOffer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/item_offer_textview_background_gray"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:text="10%"
        android:layout_gravity="center_vertical|start"/>

    <TextView
        android:id="@+id/body"
        style="@style/WhiteBoldTextItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:text="@string/dummy_text"
        android:maxWidth="220dp"
        android:layout_gravity="center_vertical|start"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/oldPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="250S.P"
            android:textSize="20sp"
            android:textColor="@color/primaryText"
            android:textStyle="bold"
            android:layout_gravity="end"
            android:foreground="@drawable/horizontal_line"
            android:alpha=".8"
            />

        <TextView
            android:id="@+id/newPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200S.P"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="24sp"
            />

    </LinearLayout>

</FrameLayout>