<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ProductDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="200dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            >


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/square_shape_green_glow_item"
                android:padding="30dp"
                >

                <TextView
                    style="@style/WhiteBoldTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dummy_pepsi_title"
                    android:textSize="14sp" />

                <TextView
                    style="@style/WhiteRegularTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="32dp"
                    android:alpha=".7"
                    android:textSize="12sp"
                    android:text="@string/price" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="-24dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/WhiteBlackTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dummy_price"
                        android:textSize="40sp" />

                    <TextView
                        style="@style/WhiteRegularTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="8dp"
                        android:alpha=".7"
                        android:text="@string/currency"
                        android:textSize="12sp" />
                </LinearLayout>

            </FrameLayout>

            <ImageView
                android:layout_width="160dp"
                android:layout_height="180dp"
                android:layout_gravity="end|bottom"
                android:layout_marginEnd="24dp"
                android:scaleType="fitStart"
                android:src="@drawable/tide" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    style="@style/SecondaryBoldTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pack"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dummy_pepsi_title"
                    style="@style/PrimaryBlackTextView"
                    android:layout_marginTop="-12dp"/>

                <TextView
                    style="@style/SecondaryBoldTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/product"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pepsi_co"
                    style="@style/PrimaryBlackTextView"
                    android:layout_marginTop="-12dp"/>

            </LinearLayout>


            <FrameLayout
                android:id="@+id/loginBtn"
                style="@style/WhiteBlackTextOfferBtn"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_gravity="bottom|end"
                android:layout_marginTop="70dp"
                android:background="@drawable/action_button_shape_green_glow_offer"
                >

                <Button
                    android:layout_width="40dp"
                    android:layout_height="70dp"
                    android:theme="@style/FlatButton"
                    android:text="+"
                    android:textColor="@color/white"
                    android:layout_marginTop="-18dp"
                    android:textSize="32sp"
                    android:layout_gravity="start"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    style="@style/WhiteBoldTextView"
                    android:layout_gravity="center"
                    android:textSize="18sp"/>

                <Button
                    android:layout_width="40dp"
                    android:layout_height="70dp"
                    android:theme="@style/FlatButton"
                    android:text="-"
                    android:textColor="@color/white"
                    android:layout_marginTop="-18dp"
                    android:textSize="38sp"
                    android:layout_gravity="end"/>

            </FrameLayout>


        </LinearLayout>


        <TextView
            style="@style/PrimaryBlackTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:text="@string/offers" />

        <View
            android:layout_width="80dp"
            android:layout_height="3dp"
            android:background="@color/green" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            style="@style/PrimaryBlackTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:text="@string/about_the_product"
            android:layout_marginTop="40dp"
            />

        <View
            android:layout_width="80dp"
            android:layout_height="3dp"
            android:background="@color/green" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dummy_text"
            style="@style/PrimaryTextView"
            android:textSize="12sp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SecondaryBlackTextView"
            android:text="More"
            android:textSize="18sp"
            android:gravity="center"
            />

        <View
            android:layout_width="80dp"
            android:layout_height="3dp"
            android:background="@color/green"
            android:layout_gravity="center"/>


        <TextView
            style="@style/PrimaryBlackTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:text="@string/similar_products"
            android:layout_marginTop="40dp"/>

        <View
            android:layout_width="130dp"
            android:layout_height="3dp"
            android:background="@color/green" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            style="@style/WhiteBlackTextOfferBtn"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:background="@drawable/action_button_shape_green_glow_offer"
            android:text="Add Now  +"
            />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>