<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <LinearLayout
            android:id="@+id/newAccountPhoneCard"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/shadow_card_black"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:srcCompat="@drawable/ic_phone_gray_24dp" />


            <EditText
                android:id="@+id/phoneNumber"
                style="@style/PrimaryBlackTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@null"
                android:hint="@string/phone_number"
                android:inputType="phone"
                android:textAlignment="viewStart"
                android:textColorHint="@color/light_gray" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/newAccountStoreNameCard"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/shadow_card_black"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:srcCompat="@drawable/ic_store_gray_24dp" />


            <EditText
                android:id="@+id/storeName"
                style="@style/PrimaryBlackTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@null"
                android:hint="@string/store_name"
                android:inputType="textNoSuggestions"
                android:textColorHint="@color/light_gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/newAccountOwnerNameCard"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/shadow_card_black"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:srcCompat="@drawable/ic_person_gray_24dp" />


            <EditText
                android:id="@+id/ownerName"
                style="@style/PrimaryBlackTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@null"
                android:hint="@string/owner_name"
                android:inputType="textNoSuggestions"
                android:textColorHint="@color/light_gray" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/newAccountAddress"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/shadow_card_black"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:srcCompat="@drawable/ic_pin_drop_gray_24dp" />


            <EditText
                android:id="@+id/storeLocation"
                style="@style/PrimaryBlackTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@null"
                android:hint="@string/store_location"
                android:inputType="textNoSuggestions"
                android:textColorHint="@color/light_gray" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/newAccountPasswordCard"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/shadow_card_black"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:srcCompat="@drawable/ic_lock_gray_24dp" />


            <EditText
                android:id="@+id/password"
                style="@style/PrimaryBlackTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@null"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:textAlignment="viewStart"
                android:textColorHint="@color/light_gray" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/newAccountPolicyLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:theme="@style/WhiteCheckBox" />

            <TextView
                android:id="@+id/textView2"
                style="@style/WhiteRegularTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="Accept"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textView3"
                style="@style/WhiteBlackTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="Privacy policy"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textView4"
                style="@style/WhiteRegularTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="and"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textView5"
                style="@style/WhiteBlackTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="Terms and Conditions"
                android:textSize="10sp" />

        </LinearLayout>

        <Button
            android:id="@+id/newAccountSubmitBtn"
            style="@style/WhiteBlackTextView"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/brown_button_round_10"
            android:text="@string/create_account" />

        <LinearLayout
            android:id="@+id/newAccountLoginLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            >

            <TextView
                android:id="@+id/textView8"
                style="@style/WhiteRegularTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha=".7"
                android:text="@string/do_you_have_an_account_question"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginEnd="5dp"
                 />


            <TextView
                android:id="@+id/signInText"
                style="@style/WhiteBlackTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="@string/login"
                android:textSize="14sp"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>