<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/productSectionHeader"
            style="@style/ItemHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:text="@string/dummy_header"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            android:textSize="18sp"
            android:maxLines="1"
            android:layout_marginEnd="80dp"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="100dp"
            android:scaleType="fitEnd"
            app:srcCompat="@drawable/seperator"/>

        <TextView
            android:id="@+id/seeAllText"
            style="@style/PrimaryBoldTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:text="@string/see_all"
            android:textSize="12sp"
            android:clickable="true"
            android:focusable="true"
            android:padding="12dp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            />


    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mainProductsRV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

</LinearLayout>