<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:layout_gravity="center">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:src="@drawable/tide" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/dummy_text"
                style="@style/PrimaryBoldItemTextView"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/item_offer_textview_background_red"
                android:text="10 %"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_margin="8dp"
                style="@style/WhiteBlackTextItemOffer"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/loginBtn"
        style="@style/WhiteBlackTextOfferBtn"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/action_button_shape_round"
        android:text="@string/buy_now"
        android:textColor="@color/white" />


</FrameLayout>