<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="210dp"
    >


    <LinearLayout
        android:layout_width="145dp"
        android:layout_height="210dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/shadow_card_black"
        android:orientation="vertical"
        android:layout_marginStart="-1dp"
        >

        <TextView
            style="@style/PrimaryTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="start"
            android:text="@string/dummy_item_top_text"
            android:textSize="10sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:scaleType="fitCenter"
            android:src="@drawable/tide" />

        <TextView
            style="@style/PrimaryTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="-8dp"
            android:gravity="center"
            android:lines="2"
            android:text="@string/dummy_item_title"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="-16dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/productPrice"
                style="@style/GreenPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="@string/dummy_price"

                />

            <TextView
                style="@style/GreenCurrency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/currency"
                android:textSize="8sp" />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/productOfferTag"
        style="@style/WhiteBoldTextItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="13dp"
        android:background="@drawable/item_product_textview_background_red"
        android:paddingEnd="0dp"
        android:paddingStart="6dp"
        android:text="@string/offers_available"
        android:textSize="12sp"
        android:visibility="visible" />


    <Button
        android:id="@+id/loginBtn"
        style="@style/WhiteBlackTextItemBtn"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="-16dp"
        android:background="@drawable/action_button_shape_green_glow_item"
        android:text="@string/buy_now" />


</FrameLayout>