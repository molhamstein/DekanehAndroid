<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/submitAccountText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/request_submitted_text"
            style="@style/WhiteBoldTextView"
            android:gravity="center"
            android:layout_marginTop="200dp"
            android:paddingEnd="80dp"
            android:paddingStart="0dp"
            android:textSize="22sp"
            />

        <ImageView
            android:id="@+id/submitAccountImage"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            app:srcCompat="@drawable/flying_envelope"
            android:layout_gravity="center"
            android:paddingEnd="40dp"
            android:paddingStart="0dp"
            />


        <TextView
            android:id="@+id/submitAccountText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha=".7"
            android:text="@string/visit_text"
            style="@style/WhiteBlackTextView"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_marginTop="40dp"
            />

        <Button
            android:id="@+id/submitAccountLoginBtn"
            style="@style/WhiteBlackTextView"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/brown_button_round_10"
            android:text="@string/back_to_sign_in"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            />

    </LinearLayout>
</ScrollView>