<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/request_submitted_text"
            style="@style/WhiteBoldTextView"
            android:gravity="center"
            android:layout_marginTop="200dp"
            android:paddingEnd="60dp"
            android:paddingStart="0dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_drafts_white_24dp"
            android:layout_gravity="center"
            android:paddingStart="50dp"
            android:paddingEnd="0dp"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha=".7"
            android:text="@string/visit_text"
            style="@style/WhiteBoldTextView"
            android:gravity="center"
            />

        <Button
            android:id="@+id/submitAccountLoginBtn"
            style="@style/WhiteBoldTextView"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/action_button_shape_round"
            android:text="@string/back_to_sign_in"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            />

    </LinearLayout>
</ScrollView>